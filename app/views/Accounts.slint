import {HorizontalBox, VerticalBox, Palette} from "std-widgets.slint";
import {AccountManager} from "../utils/account-manager.slint";

export component Accounts inherits HorizontalLayout {
    VerticalBox {
        padding: 30px;
        Rectangle {
            height: 60px;
            VerticalLayout {
                Text {
                    text: "Accounts";
                    font-size: 30px;
                    font-weight: 800;
                    color: Palette.foreground.with-alpha(0.85);
                    horizontal-alignment: left;
                }
            }
        }

        Rectangle {
            background: Palette.alternate-background;
            border-radius: 9px;
            HorizontalBox {
                VerticalBox {
                    for account in AccountManager.accounts : Rectangle {
                        height: 60px;

                        HorizontalLayout {
                            alignment: space-between;
                            VerticalLayout {
                                alignment: center;
                                Text {
                                    font-weight: 600;
                                    font-size: 15px;
                                    text: account.name;
                                }
                            }

                            VerticalLayout {
                                alignment: center;
                                Text {
                                    font-weight: 600;
                                    font-size: 15px;
                                    text: account.pubkey;
                                }
                            }

                            VerticalLayout {
                                alignment: center;
                                Text {
                                    font-weight: 600;
                                    font-size: 15px;
                                    text: "15.56";
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}