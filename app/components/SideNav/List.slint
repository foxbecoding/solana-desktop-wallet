import { Palette, HorizontalBox }  from "std-widgets.slint";
import { SideNavListItem, ListItem } from "ListItem.slint";
import { ViewManager, View } from "../../utils/view-manager.slint";

export component SideNavList inherits VerticalLayout {
    padding-top: 18px;
    property <image> walletIcon: ViewManager.activeView == View.wallet ? @image-url("../../assets/icons/wallet-icon-filled.svg") :  @image-url("../../assets/icons/wallet-icon.svg");
    property <image> collectionsIcon: ViewManager.activeView == View.swap ? @image-url("../../assets/icons/grid-icon-filled.svg") : @image-url("../../assets/icons/grid-icon.svg");
    property <image> swapIcon: ViewManager.activeView == View.swap ? @image-url("../../assets/icons/swap-icon-filled.svg") : @image-url("../../assets/icons/swap-icon.svg");
    property <image> explorerIcon: ViewManager.activeView == View.explorer ? @image-url("../../assets/icons/globe-icon-filled.svg") : @image-url("../../assets/icons/globe-icon.svg");
    property <image> settingsIcon: ViewManager.activeView == View.settings ? @image-url("../../assets/icons/settings-icon-filled.svg") : @image-url("../../assets/icons/settings-icon.svg");

    private property <[ListItem]> listItems: [
        {
            view: View.wallet,
            icon: walletIcon,
            label: "Wallet"
        },
        {
            view: View.collections,
            icon: collectionsIcon,
            label: "Collections"
        },
        {
            view: View.swap,
            icon: swapIcon,
            label: "Swap"
        },
        {
            view: View.explorer,
            icon: explorerIcon,
            label: "Explorer"
        },
        {
            view: View.settings,
            icon: settingsIcon,
            label: "Settings"
        },
    ];

    for item[index] in listItems: SideNavListItem { view: item.view; icon: item.icon; label: item.label; }

}