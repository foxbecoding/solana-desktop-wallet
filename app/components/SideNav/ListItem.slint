import { Palette, HorizontalBox }  from "std-widgets.slint";
import { ViewManager, View } from "../../utils/view-manager.slint";

export struct ListItem {
    view: View,
    icon: image,
    label: string
}

export component SideNavListItem inherits Rectangle {
    background: ViewManager.activeView == root.view ? Palette.alternate-background : Palette.background;
    height: 36px;
    border-radius: 6px;
    in-out property<View> view;
    in-out property<string> label;
    in-out property<image> icon;

    HorizontalBox {
        Image{
            source: icon;
            width: 21px;
//            colorize: Palette.accent-background;
        }

        Text {
            vertical-alignment: center;
            font-size: 15px;
            font-weight: 500;
            text: label;
        }
    }
}