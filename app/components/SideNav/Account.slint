import {Palette, VerticalBox, Button} from "std-widgets.slint";
import {Account, AccountManager} from "../../utils/account-manager.slint";

export component SideNavAccount {
    height: 120px;
    private property <bool> is_accounts_set: AccountManager.accounts.length > 0 ? true : false;

    VerticalBox {
        spacing: 3px;
        visible: is_accounts_set;
        height: 100px;
        Text {
            font-size: 15px;
            font-weight: 700;
            text: AccountManager.selected_account.name;
        }
        Text {
            text: AccountManager.selected_account.pubkey_display;
            font-weight: 500;
        }
        VerticalLayout {
            visible: is_accounts_set;
            padding-top: 9px;
            Button { text: "Change Account"; }
        }
    }
}